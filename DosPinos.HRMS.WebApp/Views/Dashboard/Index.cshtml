@model DosPinos.HRMS.WebApp.Models.Dashboards.DashboardViewModel;

@{
    ViewData["Title"] = Model.Title;
}

<div class="content-container">

    <div class="d-flex gap-4 w-100 m-auto justify-content-center flex-wrap">

        <div class="col-md-3 card">
            <div class="card-header bg-black text-white">
                <b>Empleados en vacaciones</b>
            </div>
            <div class="card-body overflow-y-auto" style="height: 14rem;">

                <div class="border-bottom border-3 border-success mb-4 py-2">Brayna Garcia</div>
                <div class="border-bottom border-3 border-success mb-4 py-2">William Torres</div>

            </div>
        </div>

        <div class="d-flex gap-4 flex-column" style="width: 40%;">

            <div class="card">
                <div class="card-header bg-black text-white">
                    <b>Empleados activos</b>
                </div>
                <div class="card-body d-flex align-items-center" style="min-height: 6rem;">
                    <span>Total de empleados activos: <b class="text-success">5</b></span>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-black text-white">
                    <b>Empleados incapacitados</b>
                </div>
                <div class="card-body d-flex align-items-center" style="min-height: 6rem;">
                    <span class="d-none">Total de empleados incapacitados: <b class="text-success">No hay empleados incapacitados.</b></span>
                    <span class="fw-bold">No hay empleados incapacitados.</span>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex gap-4 pt-4 w-100 justify-content-center flex-wrap">

        <div class="col-md-3 card">
            <div class="card-header bg-black text-white">
                <b>Vacaciones por expirar</b>
            </div>
            <div class="card-body overflow-y-auto" style="height: 16rem;">

                <div class="border-bottom border-3 border-success mb-4 py-2">William Torres</div>

            </div>
        </div>

        <div class="d-flex gap-4 flex-column" style="width:40%;">

            <div class="card">
                <div class="card-header bg-black text-white">
                    <b>Excendentes por horas extras</b>
                </div>
                <div class="card-body overflow-y-auto" style="height: 16rem;">

                    <div class="border-bottom border-3 border-success mb-4 py-2 d-flex justify-content-between">
                        <div>
                            Carlos Fallas: 
                        </div>
                        <div class="text-warning fw-bold">
                            15hrs 3mns
                        </div>
                    </div>

                    <div class="border-bottom border-3 border-success mb-4 py-2 d-flex justify-content-between">
                        <div>
                            Eddie Colocho:
                        </div>
                        <div class="text-danger fw-bold">
                            40hrs 0mns
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>