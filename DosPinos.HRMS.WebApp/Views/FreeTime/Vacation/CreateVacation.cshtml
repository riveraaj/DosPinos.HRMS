@model DosPinos.HRMS.WebApp.Models.FreeTimes.FreeTimeViewModel;


<div class="card border-0 shadow">

    <div class="card-header bg-success-subtle fw-semibold">
        Vacaciones
    </div>

    <div class="d-flex flex-column gap-3 py-3">

        <div class="container d-flex flex-column g-3 px-4 mt-3">
            <div class="d-flex justify-content-between gap-3">
                <p>Vacaciones restantes</p>
                <p class="fw-semibold">@Model.VacationBalance.RemainingDays @(@Model.VacationBalance.RemainingDays == 1 ? "día" : "días")</p>
            </div>
            <div class="d-flex justify-content-between gap-3">
                <p>Usadas</p>
                <p class="fw-semibold">@Model.VacationBalance.UsedDays @(@Model.VacationBalance.UsedDays == 1 ? "día" : "días")</p>
            </div>
            <div class="d-flex justify-content-between gap-3">
                <p>Planeadas</p>
                <p class="fw-semibold">@Model.VacationBalance.PlannedDays @(@Model.VacationBalance.PlannedDays == 1 ? "día" : "días")</p>
            </div>
        </div>

        <div class="bg-success-subtle text-dark d-flex justify-content-between p-2 px-4 gap-3 fw-bolder fs-5">
            <p class="m-0">DISPONIBLES</p>
            <p class="m-0">@(Model.VacationBalance.RemainingDays - Model.VacationBalance.PlannedDays) días</p>
        </div>

        <button class="btn btn-outline-success border-3 w-25 m-auto mt-2 " data-bs-toggle="modal" data-bs-target="#vacationModal">Solicitar</button>
    </div>
</div>

<div class="modal fade" id="vacationModal" tabindex="-1" aria-labelledby="vacationModal" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="Create" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Solicitud de vacaciones</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="formFileSm" class="form-label">Fecha de inicio</label>
                        <input type="date" asp-for="VacationObj.DateStart" min="@Model.Today" required />
                    </div>
                    <div class="mb-3">
                        <label for="formFileSm" class="form-label">Fecha de fin</label>
                        <input type="date" asp-for="VacationObj.DateEnd" min="@Model.Today" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Enviar solicitud</button>
                </div>
            </div>
        </form>
    </div>
</div>