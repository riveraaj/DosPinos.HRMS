@model DosPinos.HRMS.WebApp.Models.FreeTimes.FreeTimeViewModel;

<div class="card border-0 shadow">

    <div class="card-header bg-success-subtle fw-semibold">
        Incapacidades
    </div>

    <div class="py-4 m-auto">
        <button class="btn btn-outline-success border-3" data-bs-toggle="modal" data-bs-target="#licenseModal">Solicitar</button>
    </div>
</div>

<div class="modal fade" id="licenseModal" tabindex="-1" aria-labelledby="licenseModal" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="Create" asp-controller="License" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Formulario para licencias medicas</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="License.LicenseObj.DateStart" class="form-label">Fecha de inicio</label>
                        <input type="date" asp-for="License.LicenseObj.DateStart" min="@Model.Today" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="License.LicenseObj.DateEnd" class="form-label">Fecha de fin</label>
                        <input type="date" asp-for="License.LicenseObj.DateEnd" min="@Model.Today" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="License.LicenseObj.LicenseTypeId">Tipo de licencia</label>
                        <select class="form-select" asp-for="License.LicenseObj.LicenseTypeId" asp-items="@Model.License.LicensesTypes" required>
                            <option selected disabled value="">Seleccione una opción</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="License.FormFile" class="form-label">Adjuntar evidencia</label>
                        <input asp-for="License.FormFile" class="form-control form-control-sm" type="file" accept=".jpg,.jpeg,.png" placeholder="Ningún archivo seleccionado" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Enviar aplicación</button>
                </div>
            </div>
        </form>
    </div>
</div>