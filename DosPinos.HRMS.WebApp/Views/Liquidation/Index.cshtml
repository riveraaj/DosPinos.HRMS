@model List<DosPinos.HRMS.Entities.DTOs.Liquidation.GetAllLiquidationDTO>

@{
    ViewData["Title"] = "Liquidaciones";
}

<div class="content-tables">
    <div class="table-responsive">
        <table class="table data-table">
            <thead>
                <tr>
                    <th scope="col">Identificación</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Fecha de liquidacion</th>
                    <th scope="col">Monto total</th>
                    <th scope="col">Cesantía</th>
                    <th scope="col">Aguinaldo</th>
                    <th scope="col">Vacaciones</th>
                    <th scope="col">Pre aviso</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td class="text-start">@employee.Identification</td>
                        <td>@employee.FullName</td>
                        <td>@employee.LiquidatioDate</td>
                        <td>@employee.Amount.ToString("C")</td>
                        <td>@employee.Severance.ToString("C")</td>
                        <td>@employee.ChristmasBonus.ToString("C")</td>
                        <td>@employee.Vacation.ToString("C")</td>
                        <td>@employee.PreNotice.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>