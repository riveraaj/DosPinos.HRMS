@using DosPinos.HRMS.Entities.ValueObjects
@{
    OperationResponseVO response = null;

    if (ViewData.ContainsKey("alert"))
    {
        response = ViewData["alert"] as OperationResponseVO;
    }
}

<!DOCTYPE html>
<html lang="es-mx">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRMS</title>
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/sweetalert2/dist/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/lib/data-tables/datatables.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <div class="wrapper">
        <partial name="Components/_Menu" />
        <div class="main mt-5">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/data-tables/datatables.min.js"></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <script src="~/js/main.js"></script>

    <script>
        // Verificar si `response` no es `null` antes de usar sus propiedades
        const operationStatus = '@(response != null ? response.Status.ToString() : string.Empty)';
        const operationMessage = '@Html.Raw((response != null ? (response.Message).FirstOrDefault() : string.Empty))';
    </script>

    <script src="~/js/toast.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
