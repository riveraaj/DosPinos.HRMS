<!DOCTYPE html>
<html lang="es-mx">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRMS</title>
    <link rel="stylesheet" href="~/DosPinos.HRMS.Content/css/main.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/sweetalert2/dist/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/lib/data-tables/datatables.min.css" />

    @await RenderSectionAsync("Styles", required: false)

</head>
<body>

    <div class="d-flex vh-100">

        <partial name="Components/_SidebarMenu" />

        <div class="main">

            <partial name="Components/_TopMenu" />

            @RenderBody()
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/data-tables/datatables.min.js"></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <script src="~/DosPinos.HRMS.Content/js/main.js"></script>
    <script src="~/Dospinos.HRMS.Content/js/validations.js"></script>

    <!-- Toast Component -->
    <partial name="Components/_Toast" />
    <script src="~/Dospinos.HRMS.Content/js/toast.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
